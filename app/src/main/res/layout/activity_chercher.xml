<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chercher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prosper.safeairlines.Chercher">

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="61dp"
        android:id="@+id/spinnerone"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Aeroport de depart"
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:id="@+id/textView"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnertwo"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/spinnerone" />

    <TextView
        android:text="Aeroport d'arriver"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView3"
        android:layout_above="@+id/spinnertwo"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Date d'arriver"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/spinnertwo"
        android:layout_alignEnd="@+id/spinnertwo"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="       2016-07-09"
        android:ems="10"
        android:id="@+id/editTextdate"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Chercher"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Chercher"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
