<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/list_buss">

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus_a"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:id="@+id/button_bus_c"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_bus_a" />

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus_g"
        android:layout_marginStart="11dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_bus_d" />

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus_d"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_bus_c" />

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus_h"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/button_bus_g" />

    <Button
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_bus_k"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>