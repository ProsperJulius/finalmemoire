<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_operations3"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ope"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.prosper.safeairlines.Operations"
    tools:showIn="@layout/activity_operations">


    <TextView
        android:text="TextView"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textViewoperations"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="400dp"
        android:dividerHeight="5dp"
        android:listSelector="@drawable/list_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/listViewoperations"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textViewoperations"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
